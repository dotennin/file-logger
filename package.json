{
  "name": "file-logger",
  "version": "1.0.0",
  "description": "A file logger with Nodejs",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "tsc": "tsc -p tsconfig.build.json",
    "dev:watch": "npx ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "build": "npm-run-all clean tsc",
    "serve": "node dist/index.js",
    "eslint": "eslint --fix src/*.*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotennin/file-logger.git"
  },
  "keywords": [
    "file",
    "logger"
  ],
  "author": "Dotennin",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dotennin/file-logger/issues"
  },
  "homepage": "https://github.com/dotennin/file-logger#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "4.3.8",
    "jest": "^27.5.1",
    "lint-staged": "8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}
